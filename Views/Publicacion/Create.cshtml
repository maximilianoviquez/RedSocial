@model  Dominio.Post
<h1>Subir Post</h1>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" name="Titulo" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Imagen</label><br />
                <input type="File" name="archivo" />
            </div>

            <div class="form-group">
                <label asp-for="Contenido" class="control-label"></label>
                <input asp-for="Contenido" name="Contenido" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Visibilidad:</label>
                <select name="EsPublico" class="form-control">
                    <option value="true">Público</option>
                    <option value="false">Privado</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Subir" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>
<p>@ViewBag.Resultado</p>
